{
  "manifest_version": 3,
  "name": "X Archive Extractor",
  "version": "2.0",
  "description": "Extract and archive tweets from X/Twitter with user authentication and cloud storage",
  "permissions": [
    "activeTab",
    "downloads",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://extractor.aayushman.dev/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "X Archive Extractor"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["working.js", "download-helper.js", "json-extractor.js"],
      "matches": ["<all_urls>"]
    }
  ]
} 
{
  "manifest_version": 3,
  "name": "Tweet Downloader",
  "version": "1.0",
  "description": "Download tweets from Twitter/X profile pages",
  "permissions": [
    "activeTab",
    "downloads",
    "scripting"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Tweet Downloader"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["working.js", "download-helper.js"],
      "matches": ["<all_urls>"]
    }
  ]
} 